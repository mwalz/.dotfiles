# Export Settings
#################

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
#export LC_ALL="C"
export LANG="en_US"
# Add Homebrew paths
export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH
#export PATH=~/bin:$PATH

# Make emacs the default editor
export EDITOR="emacs --quick"

# Don't clear the screen after quitting a manual page
export MANPAGER="less -X"

# Bash History Options
export HISTSIZE=1000000
export HISTCONTROL=ignoredups:erasedups
export HISTIGNORE='&:ls:[bf]g:exit'
#export HISTIGNORE="cd *:[bf]g:exit:pwd:date:clear:mount:umount"
#export HISTTIMEFORMAT='%b %d %H:%M:%S: '
shopt -s histappend
set cmdhist

export HISTTIMEFORMAT='%h/%d/%y â€“ %H:%M:%S: '
#export HISTCONTROL=ignoreboth
# export HISTSIZE=5000
#shopt -s histappend
PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND ; }"'echo $$ $USER "$(history 1)" >> ~/.bash_eternal_history'

export LESS="--RAW-CONTROL-CHARS"
export CLICOLOR=1

# Use colors for less, man, etc.
[[ -f ~/.LESS_TERMCAP ]] && . ~/.LESS_TERMCAP

export GREP_OPTIONS="--color=auto"

# Some GNU Settings
export GNUTERM=x11

# XML Catalog Files (required? it's part of tig)
#export XML_CATALOG_FILES="/usr/local/etc/xml/catalog"

# Dynamic Load Paths in OSX
#export DYLD_LIBRARY_PATH=/usr/local/lib

# Third party tools directory
export TOOL_DIR=~/work/tools
export BREW_HOME=/usr/local/bin

# Python auto complete setup
export PYTHONSTARTUP=~/.pythonrc

